{{#if isAuthenticated}}
{{input value=params.amt placeholder="How much bitcoin will you send?"}}
{{input value=params.description placeholder="Anything to say to the client?"}}


<button type="submit" class="btn btn-primary" {{ action "donate" account.id }}>
  Send Donation
</button>

<button class="btn btn-default" {{action "reset"}}>
  Cancel
</button>
{{else}}
<p>In order to donate to this creator, you must first either {{#link-to "sign-in"}}sign in{{/link-to}} or {{#link-to "sign-up"}}create an account{{/link-to}} if you do not already have one.</p>
{{/if}}
